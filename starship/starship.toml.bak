add_newline = false
scan_timeout = 10

palette = "catppuccin_mocha"

format = """
$username $hostname\
$directory\
$git_branch\
$git_status\
$character $fill
> """

[line_break]
disabled = false

[fill]
symbol = "-"
style = "surface0"

# [username]
# format = '[](fg:peach bg:transparent bold)[󰁥 ](fg:crust bg:peach bold)[ ](fg:peach bg:transparent bold)'
# show_always = true
# disabled = false
[status]
disabled = false
style = "bg:#282C34 fg:#ABB2BF"
format = "[$symbol]($style)"
symbol = "[ ](bg:#282C34 fg:#E06C75)"
success_symbol = ""
not_executable_symbol = "[ ](bg:#282C34 fg:#E06C75)"
not_found_symbol = "[](bg:#282C34 fg:#CAAA6A)"
sigint_symbol = "[ ](bg:#282C34 fg:#E06C75)"
signal_symbol = "[ ](bg:#282C34 fg:#E06C75)"
map_symbol = true

[username]
format = '[ 󰬾󰭀 󰁥 ](peach bold)'
show_always = true
disabled = false

[directory]
truncation_length = 10
truncation_symbol = " > "
truncate_to_repo = false
use_os_path_sep = false
repo_root_format = '[$before_root_path]($before_repo_root_style)[$repo_root]($repo_root_style)[$path]($style)[$read_only]($read_only_style) '
repo_root_style = 'bold sky'

[directory.substitutions]
"repos" = " "
"git" = " "
"Documents" = " "
"Downloads" = " "
"Music" = " "
"Pictures" = " "
"Trash" = " "
".config" = ""
"home" = "󱑺 "
"~" = "󱑺 "

[git_branch]
format = "[ $branch](bold mauve) "

[git_status]
style = "bold yellow"
format = "([ $all_status$ahead_behind]($style) )"
ignore_submodules = true
renamed = ""
deleted = ""
stashed = ""

#  󰥭       󰅂                󰀦 󰛄 󰝨 󰁥 ❌   󰅖         󰅀󰅁󰅂 󰧞 󰇁 󰟒 󰖳 󰤃
[character]
success_symbol = "[](green)"
error_symbol = "[](red)"
vimcmd_symbol = "[](overlay0)"


